<UITemplate>

    <Style>
        style box {
            PreferredSize = 100px;
        }

        style container {
            FlexLayoutDirection = Horizontal;
        }

        style block-provider {
            PreferredWidth = 300px;
            FlexLayoutDirection = Horizontal;
        }
        
        style block-user {
            PreferredWidth = 100%;
        }
        
        style content-size {
            FlexLayoutDirection = Horizontal;
        }

    </Style>

    <Contents style="container">
        
        <Div style="block-provider">
            <Div style="box" x-id="one"/>
            <Div style="box" x-id="two"/>    
            <Div x-id="content-size" style="content-size">
                <Div x-id="block-user" style="block-user"/>
            </Div>
        </Div>

    </Contents>
</UITemplate>