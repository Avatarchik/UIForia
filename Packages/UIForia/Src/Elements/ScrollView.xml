<?xml version="1.0" encoding="utf-8"?>
<UITemplate>
    <Style>

        const scrollBarSize = 10px;
        const trackColor = #b2b2b2ff;

        style scrollview {
            Overflow = scroll;
        }

        style scroll-track-vertical {
            LayoutBehavior = Ignored;
            PreferredSize = @scrollBarSize 1psz;
            AlignX = 100% Parent;
            BackgroundColor = @trackColor;
            BorderRadius = 3px;
        }

        style scroll-handle-vertical {
            PreferredWidth = @scrollBarSize;
            AlignmentTargetY = Parent;
            BorderRadius = 50%;
            BackgroundColor = grey;
            LayoutFit = Shrink;
        }

        style scroll-track-horizontal {
            LayoutBehavior = Ignored;
            PreferredSize = 1psz @scrollBarSize;
            AlignY = 100% Parent;
            BackgroundColor = @trackColor;
            LayoutFit = Shrink;
            BorderRadius = 2px;
        }

        style scroll-handle-horizontal {
            PreferredHeight = @scrollBarSize;
            AlignmentTargetX = Parent;
            BorderRadius = 50%;
            BackgroundColor = grey;
        }

    </Style>
    
    <Contents style="scrollview">

        <Children attr:id="scroll-root" />

        <Group mouse:click="OnClickVertical($event)" mouse:hover="OnHoverVertical($event)" attr:id="scroll-track-vertical" style="scroll-track-vertical">
            <Div drag:create="OnCreateVerticalDrag($evt)" attr:id="scroll-handle-vertical" style="scroll-handle-vertical"/>
        </Group>

        <Group mouse:click="OnClickHorizontal($event)" mouse:hover="OnHoverHorizontal($event)" attr:id="scroll-track-horizontal" style="scroll-track-horizontal">
            <Div drag:create="OnCreateHorizontalDrag($evt)" attr:id="scroll-handle-horizontal" style="scroll-handle-horizontal"/>
        </Group>

    </Contents>
</UITemplate>