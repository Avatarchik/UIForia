<?xml version="1.0" encoding="utf-8"?>
<UITemplate>

    <Style>

        style input {
            LayoutType = Stack;
            PreferredHeight = 1cnt;
            Border = 2px;
            BorderColor = black;
            BackgroundColor = white;
            Padding = 4px 8px;
            PreferredWidth = 1cnt;
            MinWidth = 20px;
            MarginBottom = 10px;
            Overflow = Hidden;
            ClipBounds = ContentBox;
        }

        style input-element-text {
            TextWhitespaceMode = NoWrap;
            MinHeight = 1em;
            AlignY = 50% ParentContentArea;
        }

        style placeholder {
            [attr:empty] {
                Visibility = Hidden;
            }
        }
        
        style placeholder-slot {
            PreferredHeight = 1cnt;
            AlignY = 50% ParentContentArea;
            AlignX = 0% ParentContentArea;
            TextColor = rgb(150, 150, 150);
        }

    </Style>

    <Contents style="input">
        <Text x-id="input-element-text" style="input-element-text"/>

<!--        <DefineSlot slot:name="placeholder" style="placeholder-slot" if="ShowPlaceholder">-->
<!--            <Text style="placeholder" x-id="placeholder-text">{placeholder}</Text>-->
<!--        </DefineSlot>-->
    </Contents>

</UITemplate>

