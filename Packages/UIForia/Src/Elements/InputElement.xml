<?xml version="1.0" encoding="utf-8"?>
<UITemplate>

    <Style>

        style &lt;this&gt; {
            Border = 2px;
            BorderColor = black;
            BackgroundColor = white;
            Padding = 6px 8px 4px;
            PreferredWidth = 500px;
            TextFontSize = 1.2em;
            MarginBottom = 20px;
        }

        style input-element-text {
            Painter = "none";
            PreferredSize = 1pca 1em;
        }

        style placeholder {
        }
        
        style placeholder-slot {
            LayoutBehavior = Ignored;
            AlignY = 50% ParentContentArea;
            AlignX = 0% ParentContentArea;
            TextColor = rgb(150, 150, 150);
        }

    </Style>

    <Contents style="input-element">
        
        <Text style="input-element-text"/>
        
        <Slot name="placeholder" style="placeholder-slot" if="ShowPlaceholder">
            <Text style="placeholder">{placeholder}</Text>
        </Slot>

    </Contents>

</UITemplate>

