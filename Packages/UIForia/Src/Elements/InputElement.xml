<?xml version="1.0" encoding="utf-8"?>
<UITemplate>

    <Style>

        style &lt;this&gt; {
            LayoutType = Stack;
            PreferredHeight = 1cnt;
            Border = 2px;
            BorderColor = black;
            BackgroundColor = white;
            Padding = 6px 8px 4px;
            PreferredWidth = 500px;
            TextFontSize = 1.2em;
            MarginBottom = 20px;
            Overflow = Hidden;
            ClipBounds = ContentBox;
        }

        style input-element-text {
            Painter = "none";
            PreferredSize = 1pca 1cnt;
            TextWhitespaceMode = NoWrap;
        }

        style placeholder {
            [attr:empty] {
                Visibility = Hidden;
            }
        }
        
        style placeholder-slot {
            AlignY = 50% ParentContentArea;
            AlignX = 0% ParentContentArea;
            TextColor = rgb(150, 150, 150);
        }

    </Style>

    <Contents style="input-element">
       
        <Text style="input-element-text"/>

        <Slot name="placeholder" style="placeholder-slot" if="ShowPlaceholder">
            <Text style="placeholder" x-id="placeholder-text">{placeholder}</Text>
        </Slot>
    </Contents>

</UITemplate>

