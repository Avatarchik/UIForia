<?xml version="1.0" encoding="utf-8"?>
<UITemplate>

    <Style path="Documentation/Features/SelectDemo.style"/>

    <Contents style="select-demo-root">

        Selected string = {selectedString}
        Selected index = {selectedStringIndex}

        <Repeat list="words" style="repeat">
            
            <Text>Select your favourite translation for the word: {$item}</Text>
            <Select--string selectedValue.read.write="selectedLanguage[$index].Name" options="translations[$index]">
                
                <Group>this is a template {$option.Label}</Group>
    
            </Select--string>


            <Group style="button" onMouseClick="ClearTranslations($index)">
                Clear
            </Group>
            
        </Repeat>
    
        <Group style="button-group">

            <Group style="button" onMouseClick="ClearWords()">
                Clear
            </Group>

            <Group style="button" onMouseClick="AddWords()">
                Add words
            </Group>

<!--            <Group style="button" onMouseClick="SetEmpty($event)">-->
<!--                Set to empty-->
<!--            </Group>-->
        </Group>

    </Contents>

</UITemplate>