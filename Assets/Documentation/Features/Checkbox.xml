<UITemplate>
    
    <Style>
        
        style checkbox {
            PreferredSize = 24;
            BorderColor = Black;
            Border = 2px;
        }
        
        style checkbox-check {
            PreferredSize = 1pca;
            BorderRadius = 50%;
        }
        
        
    </Style>
    
    <Contents style="checkbox">
        
        <Group style="checkbox-check" style.backgroundColor="isChecked ? checkedColor : uncheckedColor"/>
        
    </Contents>
    
</UITemplate>