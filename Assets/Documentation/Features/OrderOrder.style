}




style menu-item {
    PaddingTop = 5px;
    PaddingLeft = 5px;
    TextColor = White;
    TextFontSize = 24px;
    
   
    [hover] {
        BorderColor=rgb(20,14,104);
    }
}

style subchild {
    BackgroundColor = black;
    GridLayoutRowAlignment = Grow;    
    GridLayoutColAlignment = Grow;
    PaddingLeft = 3px;
    PreferredHeight = 1cnt;
    TextColor = White;
   
   
   
 
    Opacity = 0.5;
  }

style col {
    FlexLayoutDirection = Column;  
}











