style container {
    LayoutType = Grid;
    GridLayoutColTemplate = 0.50pca 0.50pca;
    GridLayoutRowTemplate = 0.25pca 0.25pca 0.25pca;
    GridLayoutColGap = 8;
    GridLayoutRowGap = 8;
    MarginTop = 100;
    MarginBottom = 100;
   
}

 

style menu_grid_one {
    BackgroundImage = url("Images/1");
    Border = 0.25px;
    BorderRadius = 5px;
    BorderColor = black;
    TransformPivotX = 1,1;
    TransformPivotX = 1,1;
    Opacity = 0.5;
   
    [hover] {
            BorderColor=yellow;
            TransformScale = 1.02;
            }

}



style menu_grid_two {
    BackgroundImage = url("Images/2");
    Border = 0.25px;
    BorderRadius = 5px;
    BorderColor = black;
    GridItemY = 1;
    TransformPivotX = 0,0;
  
   
    [hover] {
            BorderColor=rgb(20,14,104);
            TransformScale = 1.02;
            }
}

style menu_grid_three {
 
    LayoutType = Grid;
    GridLayoutDirection = Vertical;
    GridLayoutColTemplate = 1fr 1fr;
    GridLayoutRowTemplate = 1fr 1fr 1fr 1fr 1fr 1fr;
    GridLayoutColGap = 5;
    GridLayoutRowGap = 5;
    GridItemHeight = 2;
   
   
}

style menu_grid_four {
    LayoutType = Grid;
    GridLayoutDirection = Horizontal;
  
    GridLayoutRowTemplate = 1fr;
    GridItemWidth = 2;
    TextColor = white;
    
    AlignX = Center;
    
    [hover] {
        TextGlowColor = black;
    }
}

style buttons {
    AlignY = End;
    AlignX = Start;
    PreferredSize = 32;
}


style grow {
    FlexItemGrow = 1;
}

style cell1 {
    GridItemWidth = 2;
    GridItemHeight = 2;
    BackgroundImage = url("Images/2");
    
    [hover] {
                BorderColor=rgb(20,14,104);
                TransformScale = 1.02;
                }
}

style cell2 {
    GridItemWidth = 1;
    GridItemHeight = 2;
    BackgroundColor = white;
    BackgroundImage = url("Images/2");
    Border = 0.25px;
    BorderRadius = 5px;
    BorderColor = black;
    
    [hover] {
                BorderColor=rgb(20,14,104);
                TransformScale = 1.02;
                }
}

style cell3 {
    GridItemWidth = 1;
    GridItemHeight = 1;
    BackgroundColor = blue;
    Border = 0.25px;
    BorderRadius = 5px;
    BorderColor = black;
  
    [hover] {
