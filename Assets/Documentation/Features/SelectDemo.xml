<?xml version="1.0" encoding="utf-8"?>
<UITemplate>

    <Style path="Documentation/Features/SelectDemo.style"/>

    <Contents style="select-demo-root">
        
        <Repeat list="words" style="repeat">
            
            <Heading1>Select your favourite translation for the word: {$item}</Heading1>
            <Select--string style="select" selectedValue.read.write="selectedLanguage[$index].Name" options="translations[$index]" disableOverflowX="true">
                <SlotContent name="select-placeholder">Select your word</SlotContent>
                <Group>this is a template {$option.Label}</Group>
            </Select--string>

            <Group style="button" onMouseClick="ClearTranslations($index)">
                Reset List
            </Group>
            
        </Repeat>
        
        
        <Select--string style="select" selectedValue.read.write="selectedLanguage[0].Name" options="translations[0]" disableOverflowX="true" disabled="true" />

        <Group style="button-group">
            <Group style="button" onMouseClick="ClearWords()">
                Clear
            </Group>

            <Group style="button" onMouseClick="AddWords()">
                Add words
            </Group>
        </Group>

    </Contents>

</UITemplate>