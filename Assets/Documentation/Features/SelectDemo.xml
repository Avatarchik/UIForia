<?xml version="1.0" encoding="utf-8"?>
<UITemplate>

    <Style path="Documentation/Features/SelectDemo.style"/>

    <Contents style="select-demo-root">

        Selected string = {selectedString}
        Selected index = {selectedStringIndex}

        <Select--string selectedIndex.read.write="selectedStringIndex" selectedValue.read.write="selectedString" options="stringList">

            <SlotContent name="select-placeholder">
                Placeholder 2
            </SlotContent>

            <SlotContent name="select-display">
                Selected override: {$option.Label}
            </SlotContent>
            
            <Group>this is a template {$option.Label}</Group>

        </Select--string>

        <Group style="button-group">

            <Group style="button" onMouseClick="SetRandomString()">
                Set a random selected string
            </Group>

            <Group style="button" onMouseClick="SetRandomIndex()">
                Set a random selected index
            </Group>

            <Group style="button" onMouseClick="SetEmpty($event)">
                Set to empty
            </Group>
        </Group>

    </Contents>

</UITemplate>