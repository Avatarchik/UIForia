<?xml version="1.0" encoding="utf-8"?>
<UITemplate>
    
<!--    <Style path="Documentation/Features/ScrollDemo.style"/>-->
    <Style>
        
        style level-0 {
            PreferredSize = 400px;
            BackgroundColor = red;
            FlexLayoutDirection = Column;
        }
        
        style level-1 {
            PreferredSize = 350px;
            BackgroundColor = green;
            FlexLayoutDirection = Column;
        }
        
        style level-2-a {
            PreferredSize = 100px;
            BackgroundColor = yellow;
            FlexLayoutDirection = Column;
        }

        style level-2-b {
            PreferredSize = 100px;
            BackgroundColor = white;
            FlexLayoutDirection = Column;
        }


        style level-2-c {
            PreferredSize = 600px;
            BackgroundColor = black;
            FlexLayoutDirection = Column;
        }
        style level-2-ignored {
            BackgroundImage = url("image");
            PreferredSize = 140px;
            LayoutBehavior = Ignored;
            AnchorTop = 100px;
            TransformBehaviorY = AnchorMinOffset;
            TransformPositionY = 30px;
            ZIndex = 1;
        }
        
    </Style>
    <Contents style="container">
        
        <ScrollView style="level-0">
            
            <Div style="level-1">
                    
                <Div style="level-2-a"/>
                
                <Div style="level-2-b"/>
                 
            </Div>

            <Div style="level-1">

                <Div style="level-2-a"/>

                <Div style="level-2-b"/>
                
                <Div style="level-2-c">
                    <Div style="level-2-ignored"/>
                </Div>

            </Div>
            
            <Div style="level-2-ignored"/>
        </ScrollView>

        <Paragraph>
                    
        </Paragraph>
        
