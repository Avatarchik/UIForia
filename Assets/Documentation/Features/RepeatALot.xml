<?xml version="1.0" encoding="utf-8"?>
<UITemplate>
    <Style path="Documentation/Features/RepeatALot.style" />
    <Style alias="temp">
        
        style transform-me {
            TransformRotation = 0;
            //TransformPivot = 50% 50%;
            LayoutBehavior = Ignored;
            AlignX = Center Parent;
            AlignY = Center Parent;
            run animation(rot);
        }
        
        animation rot {
            [options] {
                iterations = -1;
                duration = 5000;
            }
            [keyframes] {
                0%{
                    TransformRotation = 0;
                }
                100% {
                    TransformRotation = 360;
                }
            }
        }
        
        
    </Style>
    <Contents style="container">
        <Group style="temp.transform-me">
            <Text>I am transformed!</Text>
        </Group>
        <Repeat list="players">
            <PlayerDetail player="$item" />
        </Repeat>
    </Contents>
</UITemplate>