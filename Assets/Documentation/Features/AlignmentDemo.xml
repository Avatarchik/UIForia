<?xml version="1.0" encoding="utf-8"?>
<UITemplate>

    <Style path="Features/AlignmentDemo.style" />
    <Style src="Documentation/Documentation.style" alias="theme" />

    <Using namespace="UIForia.Layout"/>
    
    <Contents>
        
        <Heading1>Learn all about Alignments here!</Heading1>
        
        <Group style="theme.button-group">
            <Div style="button" mouse:click="SetAlignmentTarget(AlignmentTarget.Screen)">Screen</Div>
            <Div style="button" mouse:click="SetAlignmentTarget(AlignmentTarget.Parent)">Parent</Div>
            <Div style="button" mouse:click="SetAlignmentTarget(AlignmentTarget.ParentContentArea)">Parent Content Area</Div>
            <Div style="button" mouse:click="SetAlignmentTarget(AlignmentTarget.LayoutBox)">Layout Box</Div>
            <Div style="button" mouse:click="SetAlignmentTarget(AlignmentTarget.Unset)">Unset</Div>
<!--            <Div style="button" mouse:click="SetAlignmentTarget(AlignmentTarget.View)">View</Div>-->
        </Group>

        <Text>Current Anchor Target is {alignmentTarget}</Text>

        <Group style="align-demo-root">
            <Group style="grid-cell">
                <Group style="align-left-top" style.alignmentTargetX="alignmentTarget" style.alignmentTargetY="alignmentTarget">
                    <Image style="icon" src="'icon_1'" />
                    <Image style="icon" src="'icon_2'" />
                    <Image style="icon" src="'icon_3'" />
                    <Image style="icon" src="'icon_4'" />
                </Group>
            </Group>

            <Group style="grid-cell">
                <Group style="align-top-center" style.alignmentTargetX="alignmentTarget" style.alignmentTargetY="alignmentTarget">
                    <Div style="center-this">
                        <Image style="icon" src="'icon_2'" />
                        <Image style="icon" src="'icon_6'" />
                        <Image style="icon" src="'icon_3'" />
                        <Image style="icon" src="'icon_8'" />
                    </Div>
                </Group>
            </Group>
            <Group style="grid-cell">
                <Group style="align-top-right" style.alignmentTargetX="alignmentTarget" style.alignmentTargetY="alignmentTarget">
                    <Image style="icon" src="'icon_3'" />
                    <Image style="icon" src="'icon_1'" />
                    <Image style="icon" src="'icon_2'" />
                    <Image style="icon" src="'icon_9'" />
                </Group>
            </Group>

            <Group style="grid-cell">
                <Group style="align-left-center" style.alignmentTargetX="alignmentTarget" style.alignmentTargetY="alignmentTarget">
                    <Image style="icon" src="'icon_2'" />
                    <Image style="icon" src="'icon_5'" />
                    <Image style="icon" src="'icon_8'" />
                    <Image style="icon" src="'icon_1'" />
                </Group>
            </Group>
            <Group style="grid-cell">
                <Group style="align-center-center" style.alignmentTargetX="alignmentTarget" style.alignmentTargetY="alignmentTarget">
                    <Image style="icon" src="'icon_3'" />
                    <Image style="icon" src="'icon_4'" />
                    <Image style="icon" src="'icon_9'" />
                    <Image style="icon" src="'icon_5'" />
                </Group>
            </Group>
            <Group style="grid-cell">
                <Group style="align-right-center" style.alignmentTargetX="alignmentTarget" style.alignmentTargetY="alignmentTarget">
                    <Image style="icon" src="'icon_5'" />
                    <Image style="icon" src="'icon_6'" />
                    <Image style="icon" src="'icon_7'" />
                    <Image style="icon" src="'icon_8'" />
                </Group>
            </Group>

            <Group style="grid-cell">
                <Group style="align-left-bottom" style.alignmentTargetX="alignmentTarget" style.alignmentTargetY="alignmentTarget">
                    <Image style="icon" src="'icon_5'" />
                    <Image style="icon" src="'icon_6'" />
                    <Image style="icon" src="'icon_7'" />
                    <Image style="icon" src="'icon_8'" />
                </Group>
            </Group>
            <Group style="grid-cell">
                <Group style="align-center-bottom" style.alignmentTargetX="alignmentTarget" style.alignmentTargetY="alignmentTarget">
                    <Image style="icon" src="'icon_5'" />
                    <Image style="icon" src="'icon_6'" />
                    <Image style="icon" src="'icon_7'" />
                    <Image style="icon" src="'icon_8'" />
                </Group>
            </Group>
            <Group style="grid-cell">
                <Group style="align-right-bottom" style.alignmentTargetX="alignmentTarget" style.alignmentTargetY="alignmentTarget">
                    <Image style="icon" src="'icon_5'" />
                    <Image style="icon" src="'icon_6'" />
                    <Image style="icon" src="'icon_7'" />
                    <Image style="icon" src="'icon_8'" />
                </Group>
            </Group>
        </Group>
    </Contents>
</UITemplate>