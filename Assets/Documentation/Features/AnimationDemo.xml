<?xml version="1.0" encoding="utf-8"?>
<UITemplate>

    <Style path="Documentation/Features/AnimationDemo.style"/>
    <Using namespace="UIForia.Rendering" />
    <Using namespace="UIForia.Animation" />
    <Using namespace="UIForia.Systems" />

    <Contents style="container">

        <Heading2>Click on an animation type to see the result</Heading2>
        <Group style="button-container">
            <Div style="button" onMouseClick="ChangeAnimation('bounce')">Bounce</Div>
            <Div style="button" onMouseClick="ChangeAnimation('flash')">Flash</Div>
            <Div style="button" onMouseClick="ChangeAnimation('pulse')">Pulse</Div>
            <Div style="button" onMouseClick="ChangeAnimation('rubberBand')">Rubber Band</Div>
            <Div style="button" onMouseClick="ChangeAnimation('shake')">Shake</Div>
            <Div style="button" onMouseClick="ChangeAnimation('headShake')">Head Shake</Div>
            <Div style="button" onMouseClick="ChangeAnimation('swing')">Swing</Div>
            <Div style="button" onMouseClick="ChangeAnimation('tada')">Tada</Div>
            <Div style="button" onMouseClick="ChangeAnimation('wobble')">Wobble</Div>
            <Div style="button" onMouseClick="ChangeAnimation('bounceIn')">bounceIn</Div>
        </Group>

        <Heading2>Result</Heading2>
        <Group style="anim-container">
            <Div style="anims" x-id="animation-target">A simple text that you can animate</Div>
        </Group>

        <Group style="details-container" if="animationData.name != null">
            <Label>Name: {animationData.name}</Label>

            <Label>Duration (in milliseconds)</Label>
            <InputElement--int style="input" value.read.write="duration" />
            
            <Label>Delay (in seconds)</Label>
            <InputElement--float style="input" value.read.write="delay" />
            
            <Label>Iterations (-1 is infinite)</Label>
            <InputElement--int style="input" value.read.write="iterations" />
            
            <Label>Easing Function</Label>
            <Select--EasingFunction style="input" options="timingFunctions" selectedValue.read.write="timingFunction" />
            
            <Label>Animation Direction</Label>
            <Select--AnimationDirection style="input" options="directions" selectedValue.read.write="direction" />

            <Group style="button-container" if="animationTask != null">
                <Div style="button" if="ShowRunButton" onMouseClick="RunAnimationAgain()">Run</Div>
                <Div style="button" if="ShowPauseButton" onMouseClick="PauseAnimation()">Pause</Div>
                <Div style="button" if="ShowResumeButton" onMouseClick="ResumeAnimation()">Resume</Div>
                <Div style="button" if="ShowStopButton" onMouseClick="StopAnimation()">Stop!</Div>
            </Group>
            <Div>Animation Task Status: {animationTask.state}</Div>
        </Group>
        
        
    </Contents>

</UITemplate>