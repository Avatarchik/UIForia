<UITemplate>

    <Style path="Documentation/Features/FlexDemo.style"/>
    <Style src="Documentation/Documentation.style" alias="theme"/>

    <Using namespace="UIForia.Text"/>
    <Using namespace="UnityEngine"/>
    
    <Style>
        
        style container2 {
            PreferredSize = 1vw 1vh;
            BackgroundColor = white;
        }
        
        style shape-kit {
            Painter = "ShapePainter"; //"ShapeKitTest";
            PreferredSize = 100px;
            BackgroundColor = blue;
            painter:ShapePainter.sizeMod = 0.3f;
            
        }

        painter ShapePainter {
        
            [variables] {
                float sizeMod = 0.1f;
            }
            
            [draw:background] {
        
                float halfWidth = elementWidth * 0.5f;
                float halfHeight = elementHeight * 0.5f;
        
                Color32 hoverColor = style.IsHovered ? green : red;
        
                $size = 34;
                //var f = ctx.GetFloat(value)
        
                SetColor(hoverColor);
                FillRect(0, 0, halfWidth, halfHeight);
        
                SetColor(saturate(red, 20));
                FillRect(halfWidth, 0, halfWidth, halfHeight);
        
                SetColor(desaturate(red, 20));
                FillRect(0, halfHeight, halfWidth, halfHeight);
        
                SetColor(lighten(red, 20));
                FillRect(halfWidth, halfHeight, halfWidth, halfHeight);
            }
        
        }
        
    </Style>
