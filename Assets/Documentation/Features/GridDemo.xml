<?xml version="1.0" encoding="utf-8"?>
<UITemplate>
    <Style path="Documentation/Features/GridDemo.style"/>
    <Using namespace="UnityEngine"/>

    <Contents>
        
        <Group style="[variableStyle]"/>
        
        <!-- Creates a grid with a fixed amount of columns. More columns will align horizontally and break vertically -->
        <Group style="grid0 grid-horizontal col3layout">
            <Div style="cell cell-end m10 size100">Col 1</Div>
            <Div style="cell m10">Col 2</Div>
            <Div style="cell m10">Col 3</Div>

            <Div style="cell m10">Col 4 Row 2</Div>
            <Div style="cell m10">Col 5 Row 2</Div>
        </Group>

        <!-- Creates a grid with a fixed number of columns. One item does not have margin -->
        <Group style="grid1 grid-horizontal col3layout">
            <Div style="cell">Col 1</Div>
            <Div style="cell m10 cell-start">Col 2</Div>
            <Div style="cell m10 cell-end">Col 3</Div>

            <Div style="cell m10 size100 cell-center">Col 4 Row 2</Div>
            <Div style="cell m10">Col 5 Row 2</Div>
        </Group>

        <!-- Create a grid where some items must shrink to fit -->
        <Group style="grid2 grid-horizontal">

            <Div style="cell cell-shrink" style.preferredWidth="500f" style.backgroundColor="Color.yellow">
                <Text>I Shrink to fit.</Text>
                <Text>
                    My preferredWidth is {$parent.style.PreferredWidth.value}
                </Text>
                <Text>
                    My actual width is {$parent.layoutResult.actualSize.width}
                </Text>
            </Div>

            <Div style="cell cell-grow size100">
                <Text>I grow to fit.</Text>
                <Text>My preferredWidth is {$parent.style.PreferredWidth.value}</Text>
                <Text>My actual width is {$parent.layoutResult.actualSize.width}</Text>
            </Div>
            
            <Div style="cell cell-end">
                I align at the end
            </Div>

            <Div style="cell m10 size100 cell-center">I am centered</Div>
            <Div style="cell m10 cell-fit">I will grow or shrink to fit</Div>
            <Div style="cell  cell-start">
                I align at the start
            </Div>
        </Group>

