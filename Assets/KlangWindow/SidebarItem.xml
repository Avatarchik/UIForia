<?xml version="1.0" encoding="utf-8"?>
<UITemplate>
    
    <Style>
        style side-bar-item {
            PreferredSize = 64px;
            Padding = 4px;
            DistributeExtraSpace = CenterContent;
        }
        
        style side-bar-icon {
            PreferredSize = 48px;
        }
        
        style label {
            TextFontSize = 0.65em;
            TextColor = white;
        }
    </Style>
    
    <Contents style="side-bar-item">
        
        <Image style="side-bar-icon" src="icon"/>
        <Text style="label">{tooltip}</Text>
        
    </Contents>
    
</UITemplate>