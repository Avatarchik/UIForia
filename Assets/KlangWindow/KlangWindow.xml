<?xml version="1.0" encoding="utf-8"?>
<UITemplate>

    <Style path="KlangWindow/KlangWindow.style"/>

    <Block id="quote">

        <Variable type="string" name="heading"/>
        <Variable type="string" name="text"/>

        <Contents style="quote-container">

            <Heading4>{heading}</Heading4>

            <Group style="quote">
                {text}
            </Group>

        </Contents>

    </Block>

    <Contents style="window-container">

        <Group style="colony-info-sidebar">

            <Slot x-id="side-bar" style="side-bar-slot" name="KlangWindow.Sidebar">

                <Group x-id="side-bar-runner" style="side-bar-runner">
                    <Group style="side-bar-runner-display"/>
                </Group>

                <SidebarItem icon="'SpriteSettingOverwrite/ui_icon_traits_unfocused'" tooltip="'Tooltip Here'" onMouseClick="SelectSidebarItem($element)"/>

                <SidebarItem icon="'SpriteSettingOverwrite/ui_icon_traits_unfocused'" onMouseClick="SelectSidebarItem($element)"/>

                <SidebarItem icon="'SpriteSettingOverwrite/ui_icon_traits_unfocused'" onMouseClick="SelectSidebarItem($element)"/>

            </Slot>
        </Group>

        <Group style="title-bar" onDragCreate="CreateDrag_TitleBar($event)">

            <Slot name="KlangWindow.Titlebar" x-id="drag-box">
                <Heading3>
                    {windowTitle}
                </Heading3>
            </Slot>

            <Slot name="KlangWindow.TitlebarButtons" x-id="title-button-group">
                <Group style="close-button" onMouseClick="Close()"/>
            </Slot>

        </Group>

        <Group style="body">

            <Group style="body-main">
                <Group style="colony-info-head-section">
                    <Image src="'icon_2'"/>
                    <Group style="colony-info-header-text">

                        <Heading1 style="colony-name">Klang Gang</Heading1>

                        <Text>Founder</Text>
                        <Text>Weichselbaum</Text>

                        <Text>Age</Text>
                        <Text>2 years, 4 months</Text>

                        <Text>Population</Text>
                        <Text>238</Text>

                    </Group>
                    <Image src="'icon_2'"/>

                </Group>

                <Group style="quote-container">
                    <Heading4>Motto</Heading4>
                    <Group style="quote">
                        Cut once, then measure twice
                    </Group>
                </Group>
            </Group>

            <Group style="body-sidebar">
                
            </Group>

