<?xml version="1.0" encoding="utf-8"?>
<UITemplate>

    <Style path="KlangWindow/KlangWindow.style"/>

    <Contents style="window-container">
        <Group style="side-bar-container default-shadow" if="!HideSidebar">

            <define:sidebar attr:id="side-bar" style="side-bar-slot" inject.mouse:click="SelectSidebarItem($element)" />

            <Group attr:id="side-bar-runner" style="side-bar-runner">
                <Group style="side-bar-runner-display"/>
            </Group>
        </Group>

        <Div style="default-shadow main-content">
            <Group style="title-bar" drag:create="CreateDrag_TitleBar($event)">
                <define:titlebar attr:id="drag-box">
                    <Heading3>
                        {windowTitle}
                    </Heading3>
                </define:titlebar>

                <define:titlebarButtons attr:id="title-button-group" style="title-buttons">
                    <WindowTitleButton if="Resizable" style="title-button maximize-button" attr:variant="green" mouse:click="Maximize()">
                        <Div style="horizontal title-button-part"/>
                        <Div style="vertical title-button-part"/>
                    </WindowTitleButton>
                    <WindowTitleButton if="Resizable" style="title-button minimize-button" attr:variant="yellow" mouse:click="Minimize()">
                        <Div style="minus-bar title-button-part"/>
                    </WindowTitleButton>
                    <WindowTitleButton style="title-button close-button" attr:variant="red" mouse:click="Close()">
                        <Div style="left-leg title-button-part"/>
                        <Div style="right-leg title-button-part"/>
                    </WindowTitleButton>
                </define:titlebarButtons>
            </Group>

            <define:Children />
            
        </Div>

    </Contents>

    <Contents>
        <KlangWindow>
            <Group>
                all the people online
            </Group>
            
            <ScrollView>
                chat messages here
            </ScrollView>

            <Input value="'your message'" />
        </KlangWindow>
    </Contents>
    
</UITemplate>

