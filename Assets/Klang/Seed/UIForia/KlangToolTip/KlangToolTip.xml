<?xml version="1.0" encoding="utf-8"?>
<UITemplate>

    <Style>

        style container {

        }

        style tooltip-container {
        BorderRadius = 10px;
        Padding = 12px;
        LayoutBehavior = Ignored;
        BackgroundColor = red;
        TransformBehaviorX = AnchorMinOffset;
        RenderLayer = Modal;
        }
        
        style tooltip-text {
            RenderLayer = Modal;
            TextFontSize = 22;
        }
        

    </Style>

    <Contents style="container">

        <Children/>

        <Group x-id="tool-tip-root" if="showToolTip" style="tooltip-container">
            <Text style="tooltip-text">
                {text}
            </Text>
        </Group>

    </Contents>

</UITemplate>