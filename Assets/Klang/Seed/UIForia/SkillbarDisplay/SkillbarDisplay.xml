<?xml version="1.0" encoding="utf-8"?>
<UITemplate>

    <Style path="Klang/Seed/UIForia/SkillbarDisplay/SkillbarDisplay.style"/>
    <Style path="Klang/Seed/UIForia/KlangProgressBar/KlangProgressBar.style" alias="progress-bar"/>

    <Contents style="skillbar-display">
        <!--todo tooltip -->

        <Text style.preferredWidth="UIMeasurement.ParentSize(0.4f)">{label}</Text>

        <Div style="progress-bar.progress-bar-background" style.preferredWidth="UIMeasurement.ParentSize(0.5f)">

            <Div x-id="foreground"
                 style="progress-bar.progress-bar-foreground"
                 style.backgroundColor="$rgb(152, 115, 230, 255)"
                 style.preferredHeight="12f"/>

        </Div>

        <Text style="level-text">{level}</Text>

    </Contents>

</UITemplate>