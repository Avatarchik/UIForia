<?xml version="1.0" encoding="utf-8"?>
<UITemplate>

    <Style path="Klang/Seed/UIForia/Util.style" alias="util"/>
    <Style path="Klang/Seed/UIForia/KlangButton/KlangButton.style" alias="klang-button"/>

    <Style>

        style container {
            PreferredSize = 100vw, 100vh;
            BackgroundColor = #EEEEEEFF;
        }

        style app-body {
            FlexLayoutMainAxisAlignment = Center;
            FlexLayoutCrossAxisAlignment = Center;
            FlexItemSelfAlignment = Center;
            FlexItemGrow = 1;
            PreferredSize = 1pca, 0;
            FlexLayoutDirection = Column;
        }

    </Style>

    <Using namespace="UI"/>

    <Contents style="container" x-router="game" x-defaultRoute="/splash">

        <URLNavBar targetRouterName="'game'"/>

        <Group style="app-body" >

            <SeedSplashScreen x-route="/splash"/>

            <LoginFlow x-route="/login_flow"/>
            
            <!--<Game x-nestedRouter="'game'" x-route="'/game'"/>-->

        </Group>
       
    </Contents>

</UITemplate>