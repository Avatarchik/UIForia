<?xml version="1.0" encoding="utf-8"?>
<UITemplate>

    <Style path="Klang/Seed/UIForia/Util.style" alias="util"/>
    <Style path="Klang/Seed/UIForia/KlangButton/KlangButton.style" alias="klang-button"/>

    <Style>

        style container {
            PreferredSize = 100vw, 100vh;
            BackgroundColor = Red;
        }
        
        style app-body {
            FlexLayoutMainAxisAlignment = Center;
            FlexLayoutCrossAxisAlignment = Center;
            FlexItemSelfAlignment = Center;
        }

    </Style>

    <Contents style="container">

        <URLNavBar/>
        <Group style="app-body">

            <Router>
                
                <Route path="'/login'">

                    <LoginScreen/>

                </Route>

                <Route path="'/create_account'">

                    <CreateAccountScreen/>

                </Route>

            </Router>

        </Group>

    </Contents>

</UITemplate>