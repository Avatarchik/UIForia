<?xml version="1.0" encoding="utf-8"?>
<UITemplate>

    <Using namespace="UI"/>

    <Style path="Klang/Seed/UIForia/Util.style" alias="util"/>
    <Style path="Klang/Seed/UIForia/KlangWindow/KlangWindow.style"/>

    <Contents style="window-container">

        <Group x-id="header" style="window-header">

            <Slot style="window-title" name="KlangWindow.Header"/>
            
            <Slot style="window-actions" name="KlangWindow.Actions">
                <Image onMouseClick="Pin()" style="window-action-icon" src="'Sprites/ui_window_titlebar_icon_pin'"/>
                <Image onMouseClick="Minimize()" style="window-action-icon" src="'Sprites/ui_window_titlebar_icon_minimize'"/>
                <Image onMouseClick="Maximize()" style="window-action-icon" src="'Sprites/ui_window_titlebar_icon_maximize'"/>
                <Image onMouseClick="Close()" style="window-action-icon" src="'Sprites/ui_window_titlebar_icon_close'"/>
            </Slot>

        </Group>

        <Group x-id="content" style="window-content">
            <Children/>
        </Group>

    </Contents>

</UITemplate>