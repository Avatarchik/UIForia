<?xml version="1.0" encoding="utf-8"?>
<UITemplate>

    <Using namespace="UI"/>

    <Style path="Klang/Seed/UIForia/Util.style" alias="util"/>
    <Style path="Klang/Seed/UIForia/KlangWindow/KlangWindow.style"/>

    <Contents style="window-container">

        <Group x-id="header" onDragCreate="PositionWindow($event)" style="window-header">

            <Slot style="window-title" name="KlangWindow.Header"/>

        </Group>

        <Group x-id="content" onDragCreate="ResizeWindow($event)" style="window-content">
            <Children/>
        </Group>

    </Contents>

</UITemplate>