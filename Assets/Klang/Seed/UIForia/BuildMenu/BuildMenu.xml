<?xml version="1.0" encoding="utf-8"?>
<UITemplate>

    <Style path="Klang/Seed/UIForia/BuildMenu/BuildMenu.style"/>

    <Contents style="container">

        <Repeat style="build-item-row" list="buildMenuItems">
            
            <KlangToolTip onMouseClick="Toggle($index)" style="build-root-tooltip" text="$item.name">
                
                <BuildMenuItemDisplay item="$item"/>
                
            </KlangToolTip>

        </Repeat>

    </Contents>

</UITemplate>