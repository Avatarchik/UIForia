style splash-screen {

    PreferredSize = 1pca;
    BackgroundColor = black;
    FlexLayoutMainAxisAlignment = Center;
    FlexLayoutCrossAxisAlignment = Center;
    
    [attr:variant="1"] {
        BackgroundColor = red;
    }
    
    [attr:variant="2"] not [attr:block] {
        BackgroundColor = blue;
    }
}

style img {
    Border = 20px;
    BorderColor = white;
    BorderRadius = 50%;
}