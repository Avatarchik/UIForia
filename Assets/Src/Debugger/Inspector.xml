        <Group style.layoutDirection="{dir}"
               style.backgroundColor="red"
               style.mainAxisAlignment="{mainAlignment}"
               style.crossAxisAlignment="{crossAxis}"
               style.rectHeight="isHorizontal ? 100f : 400f"
               style.hover.backgroundColor="cyan">

            <Group style.rectHeight="50" style.rectWidth="50" style.backgroundColor="green" style.border="rect(2f)" style.borderColor="blue"/>
            <Group style.rectHeight="50" style.rectWidth="50" style.backgroundColor="white"/>
            <Group style.rectHeight="50" style.rectWidth="50" style.backgroundColor="blue"/>
            <Group style.rectHeight="50" style.rectWidth="50" style.backgroundColor="yellow"/>

        </Group>
        
        <Group x-if="{values.Count > 3 ? true : false}" style.backgroundColor="white">
            I only show if there are more than 3 values in the list!
        </Group>
        
        <Group style.layoutDirection="Row" style.mainAxisAlignment="SpaceAround">
            <UIButton style.rectWidth="100" style.rectHeight="14" onMouseDown="AddToValues()" buttonText="'Add more values'"/>
            <UIButton style.rectWidth="100" style.rectHeight="14" onMouseDown="ToggleLayoutDirection()" buttonText="'Toggle layout direction'"/>
            <UIButton style.rectWidth="100" style.rectHeight="14" onMouseDown="ToggleLayoutMode()" buttonText="'Main Axis'"/>
            <UIButton style.rectWidth="100" style.rectHeight="14" onMouseDown="ToggleCrossAxis()" buttonText="'Cross Axis'"/>
            <UIButton style.rectWidth="100" style.rectHeight="14" onMouseDown="SwitchValue()" buttonText="{'Switch Value ' + values.Count}"/>
        </Group>

        <Group x-if="{showError}" style.backgroundColor="white" style.hover.backgroundColor="red">
           You need to add items to the list before using the switch
        </Group>
  
        <Group style.backgroundColor="rgb(45, 152, 25)">
            <Repeat list="{values}" as="item">
                some text here {$item}
            </Repeat>
        </Group>
        
        <Group style.backgroundColor="rgb(255, 0,0)">
            <Switch value="{selectedValue}">
            <Case when="1">
            One!
            </Case>
            <Case when="2">
            Two!
            </Case>
            <Default>
            Other! {selectedValue}
            </Default>
            </Switch>
        </Group>
    </Contents>
</UITemplate>