<?xml version="1.0" encoding="utf-8"?>
<UITemplate>

    <Style path="Demo/Chat/Chat.style" />
    <Style path="Demo/Theme.style" alias="theme" />

    <Contents>
        <KlangWindowModule:KlangWindow style="chat-window" hideSideBar="true" onClose="onClose">
            <override:KlangWindow.Titlebar>
                Chat
            </override:KlangWindow.Titlebar>
            <Group style="chat-body">
                <Div style="chat-nav">
                    <Group style="chat-nav-header">
                        <Heading2>Direct Messages</Heading2>
                        <Div style="expander">+</Div>
                    </Group>
                    <Group style="current-chat">
                        <Image src="'icon_3'" style="user-icon" />
                        <Text>Vondi</Text>
                        <Div style="status">
                            <Div style="online" />
                        </Div>
                    </Group>
                    <Group style="current-chat">
                        <Image src="'icon_5'" style="user-icon" />
                        <Text>Byrne</Text>
                        <Div style="status">
                            <Div style="unread">3</Div>
                        </Div>
                    </Group>
                    <Group style="current-chat">
                        <Image src="'icon_9'" style="user-icon" />
                        <Text>Little</Text>
                        <Div style="status">
                            <Div style="offline" />
                        </Div>
                    </Group>
                </Div>
                <Div style="chat-messages">
                    <Group style="fill-container">
                        <ScrollView attr:id="scrollview" style="message-scroll-view">
                            <Heading1>This is the beginning of your direct message history with @Vondi</Heading1>
                            <Repeat list="messages">
                                <Group style="message">
                                    <Image src="$item.icon" style="user-icon-message" />
                                    <Group style="message-content">
                                        <Group style="message-info-line">
                                            <Text style="name">{$item.sender}</Text>
                                            <Text style="date">{$item.date}</Text>
                                        </Group>
                                        <Text style="text">{$item.text}</Text>
                                    </Group>
                                </Group>
                            </Repeat>
                        </ScrollView>
                            
                        <Group style="input-container">
                            <Input style="message-input" placeholder="'Message Vondi...'" sycn:value="message"  />
                            <Image src="'Prototyping/icon__086-095'"
                                   style="emoji"
                            />
                        </Group>
                    </Group>
                </Div>
            </Group>
        </KlangWindowModule:KlangWindow>
    </Contents>

</UITemplate>