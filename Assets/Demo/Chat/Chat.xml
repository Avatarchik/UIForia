<?xml version="1.0" encoding="utf-8"?>
<UITemplate>

    <Style path="Demo/Chat/Chat.style" />

    <Contents>
        <KlangWindow style="chat-window" hideSideBar="true">
            <SlotContent name="KlangWindow.Titlebar">
                Chat
            </SlotContent>
            <Group style="chat-body">
                <Div style="chat-nav">
                    <Group style="chat-nav-header">
                        <Heading2>Direct Messages</Heading2>
                        <Div style="expander">+</Div>
                    </Group>
                    <Group style="current-chat">
                        <Image src="'icon_3'" style="user-icon" />
                        <Text>Vondi</Text>
                        <Div style="status">
                            <Div style="online" />
                        </Div>
                    </Group>
                    <Group style="current-chat">
                        <Image src="'icon_5'" style="user-icon" />
                        <Text>Byrne</Text>
                        <Div style="status">
                            <Div style="unread">3</Div>
                        </Div>
                    </Group>
                    <Group style="current-chat">
                        <Image src="'icon_9'" style="user-icon" />
                        <Text>Little</Text>
                        <Div style="status">
                            <Div style="offline" />
                        </Div>
                    </Group>
                </Div>
                <Div style="chat-messages">
                    <Group style="fill-container">
                        <ScrollView style="message-scroll-view">
                            <Heading1>This is the beginning of your direct message history with @Vondi</Heading1>
                            <Group style="message">
                                <Image src="'icon_1'" style="user-icon-message" />
                                <Group style="message-content">
                                    <Group style="message-info-line">
                                        <Text style="name">Svenson</Text>
                                        <Text style="date">01/16/2019</Text>
                                    </Group>
                                    <Text style="text">hey maður!</Text>
                                </Group>
                            </Group>
                            <Group style="message">
                                <Image src="'icon_3'" style="user-icon-message" />
                                <Group style="message-content">
                                    <Group style="message-info-line">
                                        <Text style="name">Vondi</Text>
                                        <Text style="date">02/16/2019</Text>
                                    </Group>
                                    <Text style="text">hvað er að frétta?</Text>
                                </Group>
                            </Group>
                        </ScrollView>
                            
                        <Group style="input-container">
                            <Input style="message-input" placeholder="'Message Vondi...'"  />
                            <Image src="'Prototyping/icon__086-095'"
                                   style="emoji"
                            />
                        </Group>
                    </Group>
                </Div>
            </Group>
        </KlangWindow>
    </Contents>

</UITemplate>