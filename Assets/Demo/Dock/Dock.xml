<?xml version="1.0" encoding="utf-8"?>
<UITemplate>
    <Style path="Demo/Dock/Dock.style"/>
    <Style path="Demo/Theme.style" alias="theme" />
    <Contents>

     
        
        <Repeat list="MenuItems" style="transclude">
            <MenuItem ImageUrl="$item.ImageUrl"
                      Label="$item.Label"
                      NotificationCount="$item.NotificationCount"
                      onMouseClick="EnterMode($item)"
            />
        </Repeat>

        <Group style="menu-map">
            <Group style="weather" onMouseClick="ToggleParticles()"/>
            <Group style="temp-gauge"/>
            <Group style="clock"/>
            <Group style="date"/>
            <Group if="showParticles" style="particles"/>
        </Group>

    </Contents>
</UITemplate>