<UITemplate>
    
    <Style>
        
        animation rot {
        
            [options] {
                duration = 1000;
                iterations = 1;
            }
        
            [keyframes] {
                0% {
                    TransformRotation = 0;
                }
                100% {
                    TransformRotation = 360;
                }
            }
        }
        
        style container {
            PreferredSize = 800px 600px;
            FlexLayoutDirection = Column;
            //run animation(rot);
            TransformRotation = 0;
            TextFontSize = 136;
        }
        
        style particles {
            Painter = DemoParticles;
        }
        
        style img {
            PreferredSize = 100px 100px;
            BackgroundImageOffsetX = 0;
            BackgroundImageOffsetY = 0;
            BackgroundImageScaleX = 1;
            BackgroundImageScaleY = 1;
            BackgroundImageRotation = 0;
            BackgroundImage = url(image);
         //   BackgroundTint = rgba(255, 0, 0, 15);
     
            BorderRadiusTopLeft = 50%;
            BorderRadiusBottomLeft =  50%;
            BorderRadiusBottomRight =  50%;
            BorderRadiusTopRight =  50%;
            BackgroundColor = Black;
            BorderColorTop = rgba(255, 255, 255, 128);
            BorderColorRight = Red;
            BorderColorLeft = Blue;
            BorderColorBottom = Green;  
     
        }

        style img2 {
            PreferredSize = 300px 200px;
            BackgroundImageOffsetX = 0;
            BackgroundImageOffsetY = 0;
            BackgroundImageScaleX = 1;
            BackgroundImageScaleY = 1;
            BackgroundImageRotation = 0;
            BackgroundImage = url(image);
            BackgroundColor = Red;
            Border = 20px;
            BackgroundFit = Fill;
            BorderRadiusBottomRight = 150px;
            BorderColorTop = Yellow;
            BorderColorRight = Green;
            BorderColorLeft = Blue;
            BorderColorBottom = Red;
        }

        style scroll {
            PreferredSize = 200px;
        }
        
        style square {
            PreferredSize = 300px;
            BackgroundColor = rgb(100, 40, 80);
            CornerBevelTopLeft = 30px;
            //CornerBevelBottomRight = 50px;
            //MarginLeft = 9.5px;
        }
        
    </Style>
    
    <Contents style="container">
        
<!--        <ScrollView style="scroll">-->
<!--        <Group style="particles"/>-->
        <Group style="img"/>
        <Group style="img"/>
        <Group style="img2"/>
        <Group style="square"/>
<!--            <Image style="img" src="'image'"/>-->
            
<!--        </ScrollView>-->

    </Contents>
    
</UITemplate>