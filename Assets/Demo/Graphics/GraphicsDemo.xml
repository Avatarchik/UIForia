<UITemplate>
    
    <Style>
        
        animation rot {
        
            [options] {
                duration = 1000;
                iterations = 1;
            }
        
            [keyframes] {
                0% {
                    TransformRotation = 0;
                }
                100% {
                    TransformRotation = 360;
                }
            }
        }
        
        style container {
            PreferredSize = 800px 600px;
            FlexLayoutDirection = Row;
            //run animation(rot);
            TransformRotation = 0;
            TextFontSize = 136;
        }
        
        style particles {
            Painter = DemoParticles;
        }
        
        style img {
            PreferredSize = 300px 200px;
            BackgroundImageOffsetX = 0;
            BackgroundImageOffsetY = 0;
            BackgroundImageScaleX = 1;
            BackgroundImageScaleY = 1;
            BackgroundImageRotation = 0;
            BackgroundImage = url(image);
            BackgroundColor = Red;
            BackgroundTint = rgba(255, 0, 0, 5);
            BorderTop = 20px;
            BorderBottom = 0px;
            BorderRight = 20px;
            BorderLeft = 5px;
            MarginTop = 0.5px;
            BorderRadiusTopLeft = 150px;
            //BorderRadiusBottomLeft = 150px;
            BorderRadiusBottomRight = 150px;
            BorderRadiusTopRight = 150px;
            // BackgroundFit = Contain;
            BackgroundColor = white;
            BorderColor = Blue;
            //CornerBevelTopLeft = 30px;
            //CornerBevelBottomRight = 50px;
        }

        style img2 {
            PreferredSize = 300px 200px;
            BackgroundImageOffsetX = 0;
            BackgroundImageOffsetY = 0;
            BackgroundImageScaleX = 1;
            BackgroundImageScaleY = 1;
            BackgroundImageRotation = 0;
            BackgroundImage = url(image);
            BackgroundColor = Red;
            Border = 0px;
            BackgroundFit = Fill;
            BorderRadiusBottomRight = 150px;
            BorderColorTop = Yellow;
            BorderColorRight = Green;
            BorderColorLeft = Blue;
            BorderColorBottom = White;
        }

        style scroll {
            PreferredSize = 200px;
        }
        
        style square {
            PreferredSize = 300px;
            BackgroundColor = rgb(100, 40, 80);
            CornerBevelTopLeft = 30px;
            CornerBevelBottomRight = 50px;
        }
        
    </Style>
    
    <Contents style="container">
        
<!--        <ScrollView style="scroll">-->
<!--        <Group style="particles"/>-->
        <Group style="img"/>
        <Group style="img2"/>
        <Group style="square"/>
<!--            <Image style="img" src="'image'"/>-->
            
<!--        </ScrollView>-->

    </Contents>
    
</UITemplate>