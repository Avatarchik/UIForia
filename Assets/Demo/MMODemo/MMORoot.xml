<?xml version="1.0" encoding="utf-8"?>
<UITemplate>
    <Style src="Demo/MMODemo/MMORoot.style" />
    <Contents style="menu-screen">
        
        <Heading1>Wowzers MMO Menu</Heading1>
        
        <!-- todo: input does not work because the bindings clear the value every frame -->
        <Group style="char-info">
            <Label>Character Name</Label>
            <InputElement sync:value="characterName" />
        </Group>

        Hello, mighty {characterName}!
        
        <Group style="character">
            
            <Div style="slot head" />
            <Div style="slot body" />
            <Div style="slot left-arm" />
            <Div style="slot right-arm" />
            <Div style="slot legs" />
            <Div style="slot shoes" />
            <Div style="slot accessories" />
            <Div style="slot quick" />

        </Group>

        <Repeat list="inventoryItems" style="inventory">
            <Div style="slot inventory-item">{$item.id}</Div>
        </Repeat>
    </Contents>
</UITemplate>