        <Character/>
        
        <Repeat list="inventoryItems" style="inventory">
            <Div style="slot inventory-item">
                <Div drag:create="StartDragInventoryItem($element, $item)">{$item.id}</Div>
            </Div>
        </Repeat>
    </Contents>
    
    <Element id="Character"><![CDATA[
       
       int value;
       string strValue;    
      
       void DoStuff() {
          UnityEngine.Debug.Log(value);
       }
       
       int GetValue() {
           DoStuff();
           return value * 3; 
       }
            
       ]]>
        
        <Field name="value" type="int"/>
        
        <Template mouse:click="value++">
            Value is {GetValue()} 
            <Group style="character">
            
                <Div style="slot head"/>
                <Div style="slot body" />
                <Div style="slot left-arm" />
                <Div style="slot right-arm" />
                <Div style="slot legs" />
                <Div style="slot shoes" />
                <Div style="slot accessories" />
                <Div style="slot quick" />

            </Group>
            
        </Template>
        
    </Element>
</UITemplate>