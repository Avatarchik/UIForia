<?xml version="1.0" encoding="utf-8"?>
<UITemplate>
    
    <Style src="Demo/Simple/Simple.style"/>
    
    <Contents>
        
        <Text onMouseClick="ToggleLanguage()" style="header">
            {HeaderText}
        </Text>
        
        <Panel style="box box-black" onMouseClick="OnBoxClicked(1)">
            Clicked {boxClicks1} times
        </Panel>
        
        <Panel style="box box-red" onMouseClick="OnBoxClicked(2)">
           Clicked {boxClicks2} times
        </Panel>
        
        <Panel style="box box-gold" onMouseClick="OnBoxClicked(3)">
            Clicked {boxClicks3} times
        </Panel>
        
    </Contents>
</UITemplate>