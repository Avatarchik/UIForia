<?xml version="1.0" encoding="utf-8"?>
<UITemplate>
    <Style>
        style resource-container-contents {
            PaddingLeft = 64px;
            PreferredWidth = 1pca;
        }
        
        style resource-container-content-item {
            BackgroundColor = white;
            FlexLayoutDirection = Column;
            FlexLayoutMainAxisAlignment = SpaceBetween;
            PreferredWidth = 1pca;
        }
        
        style resource-name {
            TextFontAsset = GothamNarrow-Medium SDF;
            TextFontSize = 20;
        }
        
         style resource-count {
            PaddingRight = 12px;
            TextColor = #6C6C6C;
            TextFontSize = 24;
            TextFontAsset = GothamNarrow-Book SDF;
        }
        
    </Style>
    <Contents style="resource-container-contents">
            
        <Repeat list="{contents}">
            
            <Group onDragCreate="CreateDrag($element)" style="resource-container-content-item">
                
                <Group style.layoutDirection="Column" style.crossAxisAlignment="Center">
                    <Image src="{$item.iconUrl}"/>
                    <Text style="resource-name">{$item.name}</Text>
                </Group>
                
                <Text style="resource-count">{$item.count}</Text>
                
            </Group>
        </Repeat>
                    
    </Contents>
</UITemplate>