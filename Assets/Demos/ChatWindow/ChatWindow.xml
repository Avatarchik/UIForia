<?xml version="1.0" encoding="utf-8"?>
<UITemplate>

    <Style>
        style container {
            FlexLayoutDirection = Row;
            PreferredWidth = 600;
            PreferredHeight = 600;
            OverflowY = Scroll;
            BackgroundColor = orange;
            TextFontSize = 76;
            TransformPositionX = 300;
            TransformPositionY = 300;
            LayoutBehavior = Ignored;
            TransformRotation = 0;
            TransformPivotX = 0;
            TransformPivotY = 0;
        }
                
        style parent {
            LayoutType = Flow;
            FlexLayoutDirection = Column;
            PreferredSize = 400px;
            BackgroundColor = white;
        }
        
        style child {
            PreferredSize = 100px;
            MarginLeft = 5px;
            MarginTop = 5px;
            MarginRight = 30px;
            MarginBottom = 10px;
            BackgroundColor = Red;
            Padding = 5px;
            Border = 5px;
            <!--TransformRotation = 60;-->
            TransformPivotX = 50%;
            TransformPivotY = 50%;
        }
        
        style child2 {
            PreferredSize = 100px;
            BackgroundColor = Blue;
        }
        
        style window-frame-temp {
            PreferredWidth = 500px;
            TransformBehaviorX = LayoutOffset;
            TransformBehaviorY = LayoutOffset;
            TransformPositionX = 100px;
            TransformPositionY = 100px;
        }
        
        style input {
            PreferredSize = 100px, 32px;
            BackgroundColor = white;
            TransformBehavior = LayoutOffset;
            TransformPosition = 20px;
        }
        
        
        
    </Style>

    <Contents style="container">

        <Input style="input" textValue.bindTo="onValueChanged"/>
        
        <!--<Div style="parent">-->
            <!--&lt;!&ndash;<Div style="child">Text</Div>&ndash;&gt;-->
            <!--&lt;!&ndash;<Div style="child2"/>&ndash;&gt;-->
        <!--</Div>-->
        
        <!--<ChatPanel style.borderColor="red" selectedGroupIdx="{selectedChatGroup}" chatData="{chatData}"/>-->

        <!--<SeedWindowFrame style="window-frame-temp">-->
            <!--<Div>Text</Div>-->
        <!--</SeedWindowFrame>-->
        
    </Contents>

</UITemplate>