<?xml version="1.0" encoding="utf-8"?>
<UITemplate>

    <Style>
        style container {
            FlexLayoutDirection = Row;
            PreferredWidth = 800px;
            PreferredHeight = 764px;
            OverflowY = Scroll;
            BackgroundColor = orange;
        }
                
        style parent {
            FlexLayoutDirection = Row;
            PreferredSize = 400px;
            PreferredWidth = 200px;
            BackgroundColor = white;
            OverflowY = Scroll;
            ScrollbarVerticalTrackColor = red;
            ScrollbarVerticalHandleBorderRadius = 10;
            ScrollbarVerticalHandleSize = 12;
            <!--ScrollbarVerticalTrackSize = 30;-->
        }
        
        style child {
            PreferredSize = 500px;
            BackgroundColor = Yellow;
        }
        
        style child2 {
            PreferredSize = 500px;
            BackgroundColor = Blue;
        }

        
        style window-frame-temp {
            PreferredWidth = 500px;
            TransformBehaviorX = LayoutOffset;
            TransformBehaviorY = LayoutOffset;
            TransformPositionX = 100px;
            TransformPositionY = 100px;
        }
        
        style input {
            PreferredSize = 200px, 32px;
            BackgroundColor = white;
            TransformBehavior = LayoutOffset;
            TransformPosition = 20px;
        }
        
        
        
    </Style>

