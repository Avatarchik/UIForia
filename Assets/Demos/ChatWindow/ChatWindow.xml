<?xml version="1.0" encoding="utf-8"?>
<UITemplate>

    <Style>
        style container {
            FlexLayoutDirection = Row;
            FlexLayoutMainAxisAlignment = Start;
            PreferredWidth = 800px;
            PreferredHeight = 500px;
            BackgroundColor = white;
            OverflowY = Scroll;
        }
        
        style childStyle {
            BackgroundColor = blue;
            PreferredWidth = 200px;
            PreferredHeight = 300px;
        }
        
    </Style>

    <Import value="ClippedPanel+ClippedCorner" as="ClippedCorner"/>

    <Contents style="container">
        
        <WindowFrame/>
        <WindowFrame/>
        
    </Contents>

</UITemplate>