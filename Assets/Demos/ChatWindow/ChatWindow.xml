<?xml version="1.0" encoding="utf-8"?>
<UITemplate>

    <Style>
        style container {
            FlexLayoutDirection = Row;
            PreferredWidth = 800px;
            PreferredHeight = 764px;
            OverflowY = Scroll;
        }
                
        style parent {
            FlexLayoutDirection = Column;
            PreferredSize = 100px;
            <!--PreferredWidth = 100px;-->
            BackgroundColor = white;
            OverflowY = Scroll;
        }
        
        style child {
            PreferredSize = 100px;
            TransformBehavior = LayoutOffset;
            TransformPosition = 32px, 32px;
            BackgroundColor = Yellow;
            RenderLayer = Modal;
        }
        
        style child2 {
            PreferredSize = 100px;
            TransformBehavior = LayoutOffset;
            TransformPosition = 16px, 16px;
            BackgroundColor = Blue;
            <!--RenderLayerOffset = -;-->

        }

        
        style window-frame-temp {
            PreferredWidth = 500px;
            TransformBehaviorX = LayoutOffset;
            TransformBehaviorY = LayoutOffset;
            TransformPositionX = 100px;
            TransformPositionY = 100px;
        }
        
    </Style>

    <Contents style="container">

        <Div style="parent">
            <Div style="child"/>
            <Div style="child2"/>
        </Div>
        <!--<ChatPanel style.borderColor="red" selectedGroupIdx="{selectedChatGroup}" chatData="{chatData}"/>-->

        <!--<SeedWindowFrame style="window-frame-temp">-->
            <!--<Div>Text</Div>-->
        <!--</SeedWindowFrame>-->
        
    </Contents>

</UITemplate>