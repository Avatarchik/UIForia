<?xml version="1.0" encoding="utf-8"?>
<UITemplate>
    
    <Style>
    
        style image {
            PreferredWidth = 64px;
            PreferredHeight = 64px;
        }
        
        style unread-count {
            BackgroundColor = #FF5454;
            BorderRadius = 50%;
            Border = 3px;
            BorderColor = black;
            LayoutBehavior = Ignored;
            PreferredWidth = 32px;
            PreferredHeight = 32px;
            TransformBehaviorX = AnchorMaxOffset;
            TransformBehaviorY = AnchorMaxOffset;
            TransformPositionX = -26px;
            TransformPositionY = -26px;
            FlexLayoutMainAxisAlignment = Center;
            FlexLayoutCrossAxisAlignment = Center;
        }
        
        style unread-count-text {
            TextColor = white;
            TextFontAsset = Gotham-Medium SDF;
        }
        
    </Style>
    
    <Contents>
        
        <Div style="image" style.backgroundImage="{url(chatGroup.iconUrl)}"/>
        
        <Div x-if="{chatGroup.unreadCount > 0}" style="unread-count">
            <Text style="unread-count-text">
                {chatGroup.unreadCount &lt; 10 ? '' + chatGroup.unreadCount : '...'}
            </Text>
        </Div>
            
    </Contents>
    
</UITemplate>