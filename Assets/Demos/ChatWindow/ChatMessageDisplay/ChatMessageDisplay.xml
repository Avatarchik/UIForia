<?xml version="1.0" encoding="utf-8"?>
<UITemplate>
    <Style>
        
        style container {
            PreferredWidth = 1pca;
            PreferredHeight = 100px;
            FlexLayoutDirection = Column;
            FlexLayoutCrossAxisAlignment = Center;
            Padding = 12px;
            BorderBottom = 1px;
            BorderColor = black;
        }
        
        style message-container {
            PreferredWidth = 0;
            FlexItemGrow = 1;
            Padding = 12px;
        }
        
        style header {
            FlexLayoutDirection = Column;
            FlexLayoutCrossAxisAlignment = Center;
        }
        
        style username {}
        
        style user-icon {
            PreferredWidth = 32px;
            PreferredHeight = 32px;
        }
        
        style timestamp {
            TextColor = #B6B6B6;
            PaddingLeft = 12px;
        }
        
        style message {
            PreferredWidth = 1pca;
        }
        
    </Style>
    
    <Contents style="container">
            
            <Image style="user-icon" src="{iconUrl}"/>
            
            <Group style="message-container">
                
                <Group style="header">
                    <Text style="username"> {message.from}</Text>
                    <Text style="timestamp">{message.time}</Text>
                </Group>
                
                <Text style="message">{message.payload}</Text>
                
            </Group>
        
    </Contents>
    
</UITemplate>