<?xml version="1.0" encoding="utf-8"?>
<UITemplate>
    
    <Style>
            
        style container {
            MinWidth = 300px;
            PreferredWidth = 0;
            PreferredHeight = 1pca;
            FlexItemGrow = 1;
            BackgroundColor = white;
        }
        
        style chat-log {
            PreferredWidth = 100%;
        }
        
        style chat-input {}
        
    </Style>
    
    <Contents style="container">
        
        <Group style="chat-log">
            
            <Repeat list="{thread.messages}">
                <ChatMessageDisplay message="{$item}"/>
            </Repeat>
            
        </Group>
        
        <Group style="chat-input">
            
        </Group>
        
    </Contents>
    
</UITemplate>