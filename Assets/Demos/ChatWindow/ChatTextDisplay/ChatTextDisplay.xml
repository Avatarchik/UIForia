<?xml version="1.0" encoding="utf-8"?>
<UITemplate>
    
    <Style>
            
        style container {
            MinWidth = 300px;
            PreferredWidth = 0;
            PreferredHeight = 1pca;
            FlexItemGrow = 1;
            BackgroundColor = white;
            Padding = 12px;
            
        }
        
        style chat-log {
            PreferredWidth = 1pca;
            PreferredHeight = 0;
            FlexItemGrow = 1;
        }
        
        style chat-input {
            PreferredWidth = 1pca;
            PreferredHeight = 48px;
            BackgroundColor = red;
            BorderRadius = 10px;
        }
        
        style input {
            PreferredWidth = 1pca;
            PreferredHeight = 1pca;
            BackgroundColor = #F2F2F2;
        }
        
    </Style>
    
    <Contents style="container">
        
        <Group style="chat-log">
            
            <Repeat list="{thread.messages}">
                <ChatMessageDisplay message="{$item}"/>
            </Repeat>
            
        </Group>
        
        <Group style="chat-input">
            <Input style="input" placeholder="'Placeholder'"/>
        </Group>
        
    </Contents>
    
</UITemplate>