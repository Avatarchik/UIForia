        <ScrollView style="scroll-view">

            <Div style="big">

                <Repeat count="20" style="horizontal">
                    <Group style="item">
                        <Text mouse:click="() => $element.ScrollIntoView()"> Click Me {$index}</Text>
                    </Group>
                </Repeat>
            </Div>

        </ScrollView>
    </Contents>

</UITemplate>