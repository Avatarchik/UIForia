<UITemplate>

    <Style>

        style container {
            FlexLayoutDirection = Horizontal;
            PreferredSize = 1vw 1vh;
            Painter = "ClipBounds";
        }

        style clipper {
            PreferredSize = 500px 500px;
            BackgroundColor = white;
            LayoutBehavior = Ignored;
            AlignX = Center Parent;
            AlignY = Center Parent;
            Overflow = Hidden;
        }
        
        style child-2 {
            PreferredSize = 600px 100px;
            BackgroundColor = blue;
            [hover] {
                BackgroundColor = red;
            }
            TransformRotation = 45;
        }
        
    </Style>

    <Contents style="container">
        <Group style='clipper'>
            <Group style="child-2"/>
        </Group>
    </Contents>
</UITemplate>