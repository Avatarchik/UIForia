<UITemplate>

    <Style>
        style box {
            PreferredSize = 100px;
        }

        style container {
            FlexLayoutDirection = Horizontal;
        }

        style block-provider {
            PreferredWidth = 300px;
            PreferredHeight = 300px;
            FlexLayoutDirection = Vertical;
            BackgroundColor = Yellow;
        }
        
        style block-user {
            PreferredWidth = 100%;
            PreferredHeight = 100px;
            BackgroundColor = Orange;
            TextWhitespaceMode = PreserveNewLines;
        }
        
        style content-size {
            FlexItemShrink = 1;
            FlexLayoutDirection = Horizontal;
            PreferredHeight = 150px;
            BackgroundColor = white;
        }
        
        style transclude {
            LayoutBehavior = TranscludeChildren;
        }
        
        style centerX {
            AlignX = 100% LayoutBox;
        }

        style ignore-me {
            LayoutBehavior = Ignored;
            PreferredSize = 0.75pca;
            AlignX = Center Parent;
            AlignY = 100% Parent;
            BackgroundColor = Green;
        }
        
    </Style>
    
    <Using namespace="UnityEngine"/>

    <Contents style="container">
        
        <Div style="block-provider">
            <Div style="box centerX" style.backgroundColor="Color.red" x-id="one"/>
            <Div style="box centerX" style.backgroundColor="Color.white" x-id="two"/>    
            <Div x-id="content-size" style="transclude">
                <Div x-id="block-user" style="block-user"/>
                <Text>Text here {Time}</Text>
                <Text>Text here {Time}</Text>
                <Text>Text here {Time}</Text>
                <Text>Text here {Time}</Text>
            </Div>
<!--            <Div style="ignore-me"/>-->
        </Div>

    </Contents>
</UITemplate>