<UITemplate>

    <Style>

        style container {
            FlexLayoutDirection = Horizontal;
            PreferredSize = 2cnt;
            AlignContentHorizontal = End;   
            AlignItemsVertical = Center;
            FitItemsVertical = Fill;
        }

        style  w100h100 {
            PreferredSize = 80px 90px;
            BackgroundColor = red;
            MarginLeft = 10px;
            MarginRight = 10px;
            MarginTop = 10px;
        }

        style grow {
            FlexItemGrow = 1;
            BackgroundColor = white;
            LayoutFitVertical = None;
        }   
        
        // todo -- implement vertical case of flex box with new allocated box margin version
    </Style>

    <Contents style="container">
        <Group style='w100h100'/>
        <Group style='w100h100 grow'/>
        <Group style='w100h100'/>
    </Contents>
</UITemplate>