<UITemplate>

    <Style>
        
        style m {
            PreferredSize = 100px;
            BackgroundColor = red;
        }
        
    </Style>
    
    <Contents>

        <Div style="m" mouse:down="HandleMouseClick_NoParams()"/>
        
        <Div style="m" mouse:down="HandleMouseClick_EvtParam($evt)"/>
        
        <Div style="m" mouse:down="HandleMouseClick_MixedParams($evt, 36)"/>
        
        <Div style="m" mouse:down="HandleMouseClick_NoEvtParam('string goes here', 35)"/>
        
    </Contents>
    
</UITemplate>