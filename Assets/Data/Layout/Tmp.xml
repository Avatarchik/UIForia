<UITemplate>

    <Style>

        style item {
        PreferredSize = 100px;
        BackgroundColor = white;
        BorderColor = black;
        Border = 2px;
        DistributeExtraSpace = CenterContent;
        }

        style scroll-view {
        PreferredWidth = 0.5vw;
        PreferredHeight = 0.5vh;
        AlignY = 50% Screen;
        Padding = 20px;
        Border = 20px;
        BorderColor = red;
        }

        style select {
        AlignX = 50% Screen;
        AlignY = 50% Screen;
        }

        style parent {

        BackgroundColor = Black;
        PreferredSize = 0.5vw 0.5vh;
        Border = 5px;
        BorderColor = red;
        }

        style keep-onscreen {
        AlignX = 0px Mouse;
        AlignY = 0px Mouse;
        AlignmentBoundaryX = Clipper;
        AlignmentBoundaryY = Clipper;
        PreferredSize = 100px;
        BackgroundColor = white;
        }

        style clipper {
        Overflow = Hidden;
        AlignX = 25% Screen;
        AlignY = Center Screen;
        }

        style horizontal {
        FlexLayoutDirection = Horizontal;
        }
        
        style big {
            PreferredSize = 4000px;
        }
        

    </Style>
    <Contents>

        <!--        <Select style="select" selectedValue="selectedValue" options="options">-->
