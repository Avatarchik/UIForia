<UITemplate>

    <Style>

        // todo use this as a test! (also for horizontal)
        style container {
            PreferredSize = 1vw 1vh;
            LayoutType = Grid;
            GridLayoutDirection = Vertical;
            GridLayoutRowTemplate = 100px grow(150px, 300px) 100px;
            BackgroundColor = white;
        }
        
        style child0 {
            PreferredSize = 100px 100px;
            BackgroundColor = red;
            GridItem = 1 0;
        }
        
        style child1 {
            PreferredSize = 100px 1pca;
            BackgroundColor = blue;
            GridItem = 0 0 1 2;
        }
     
    </Style>

    <Contents style="container">
        
        <Div style="child0"/>
        <Div style="child1"/>
        
    </Contents>
</UITemplate>